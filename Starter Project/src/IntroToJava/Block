package IntroToJava;

import java.awt.Color;
import java.awt.Graphics;

public class Block {

private int x, y, ySpeed;
private Color color;

public Block(int x, int y, Color color, int ySpeed) {
	this.x = x;
	this.y = y;
	this.color = color;
	this.ySpeed = ySpeed;
}

public void draw (Graphics g) {
	g.setColor(color);
	g.fillRect(x, y, 20, 20);

}


public void move() {
	y += ySpeed;
}

public int getY() {
	return y;
}


}
